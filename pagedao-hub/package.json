{
  "name": "pagedao-hub",
  "version": "0.1.0",
  "private": true,
  "description": "PageDAO Hub - A comprehensive dashboard and API suite for the PageDAO ecosystem",
  "scripts": {
    "build": "sh netlify-build.sh",
    "dev": "pnpm -r --parallel run dev",
    "dev:dashboard": "cd packages/dashboard && pnpm run dev",
    "dev:api": "cd packages/api && pnpm run dev",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "clean": "rm -rf node_modules netlify/functions public && pnpm -r run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pagedao/pagedao-hub"
  },
  "keywords": [
    "pagedao",
    "blockchain",
    "ethereum",
    "optimism",
    "base",
    "osmosis",
    "dashboard",
    "api"
  ],
  "author": "PageDAO Contributors",
  "license": "MIT"
}