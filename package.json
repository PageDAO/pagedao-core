{
  "name": "pagedao-hub",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "sh netlify-build.sh",
    "dev": "concurrently \"pnpm run dev:core\" \"pnpm run dev:api\" \"pnpm run dev:dashboard\"",
    "dev:core": "pnpm --filter @pagedao/core run dev",
    "dev:api": "cd packages/api && netlify dev --port 7777",
    "dev:dashboard": "pnpm --filter dashboard run dev -- --port 3002"
  },
  "keywords": [
    "pagedao",
    "ethereum",
    "optimism",
    "base",
    "osmosis"
  ],
  "author": {
    "name": "PageDAO"
  },
  "license": "MIT",
  "description": "A comprehensive dashboard and API suite for the PageDAO ecosystem",
  "dependencies": {
    "axios": "^1.8.2",
    "canvas": "^3.1.0",
    "ethers": "^5.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@netlify/functions": "^3.0.1",
    "@types/node": "^22.13.10",
    "concurrently": "^8.2.2",
    "netlify-lambda": "^2.0.16",
    "typescript": "^5.8.2"
  }
}
