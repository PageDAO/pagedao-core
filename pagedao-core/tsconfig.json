{
    "compilerOptions": {
      "target": "es2018",
      "module": "esnext",
      "lib": ["es2018", "dom"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "runContentTest.js", "testMirrorContract.js"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }
  